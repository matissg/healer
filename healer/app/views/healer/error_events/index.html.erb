<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Error events" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Error events</h1>
    <%= link_to "New error event", new_healer_error_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="healer_error_events" class="min-w-full">
    <% @healer_error_events.each do |healer_error_event| %>
      <%= render healer_error_event %>
      <p>
        <%= link_to "Show this error event", healer_error_event, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
